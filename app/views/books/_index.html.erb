<!--投稿一覧画面（Booksの箇所）記述場所-->
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>

  <!--投稿本に付けられたいいねがログインユーザ（自分）が含まれているか判定（favorited_by?メソッド）-->
      <% if book.favorited_by?(current_user) %>
        <td>
  <!--リンク（aタグ）メソッドを条件によって変えている記述-->
    <!--class: "text-danger",（Bootstrapのcolor記述）追記でハートと数字を赤に-->
          <%= link_to book_favorite_path(book), class: "text-danger", method: :delete do %>
  <!--FontAwesomeアイコン（中に色ハート）追記-->
            <i class="fa-solid fa-heart"></i><%= book.favorites.count %>
          <% end %>
        </td>
  <!--含む/含まないで表示と機能を分ける-->
      <% else %>
        <td>
          <%= link_to book_favorite_path(book), method: :post do %>
  <!--FontAwesomeアイコン（枠色ハート）追記-->
            <i class="fa-regular fa-heart"></i><%= book.favorites.count %>
          <% end %>
        </td>
      <% end %>
<!--コメント機能記述-->
        <td>コメント数:<%= book.book_comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>