<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
  <!--引数が渡せていないので記述（, user: @user）-->
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <!--_form.htmlのmodel:bookがbook, modelに渡す値（インスタンス変数）が@book_new-->
        <!--books/追記-->
      <%= render 'books/form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"80x80" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
  <!--本の投稿ユーザと現在ログインのユーザが一致していたら表示する記述（if~end）-->
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
  <!--投稿本に付けられたいいねがログインユーザ（自分）が含まれているか判定（favorited_by?メソッド）-->
        <% if @book.favorited_by?(current_user) %>
          <td>
  <!--リンク（aタグ）メソッドを条件によって変えている記述-->
            <%= link_to book_favorite_path(@book), class:"text-danger", method: :delete do %>
              <i class="fa-solid fa-heart"></i><%= @book.favorites.count %>
            <% end %>
          </td>
  <!--含む/含まないで表示と機能を分ける-->
        <% else %>
          <td>
            <%= link_to book_favorite_path(@book), method: :post do %>
              <i class="fa-regular fa-heart"></i><%= @book.favorites.count %>
            <% end %>
          </td>
        <% end %>
<!--コメント機能記述-->
          <td>コメント数:<%= @book.book_comments.count %></td>
          <% @book.book_comments.each do |book_comment| %>
<!--model/user.rbのget_profile_imageに合わせる（100,100）を, size:'100x100'に変更-->
            <!--<td><%#= image_tag book_comment.user.get_profile_image, size:'100x100' %></td>-->
<!--コメントしたのがログインユーザなら削除ボタン表示で削除できる記述-->
            <% if book_comment.user == current_user %>
<!--削除後は投稿詳細(books/show)へリダイレクトされる記述-->
              <%#= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
            <% end %>
          <% end %>
        </tr>
      </table>
      <table>
<!--一つの本 その本の全てのコメント-->
        <% @book.book_comments.each do |book_comment| %>
        <tr>
<!--余白の<td></td>-->
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td>
            <%= image_tag book_comment.user.get_profile_image, size:'80x80' %><br>
            <%= link_to(book_comment.user) do %>
            <%= book_comment.user.name %>
            <% end %>
          </td>
          <td>
            <%= book_comment.comment %>
          </td>
<!--コメントをしたユーザ以外にはDestroyボタン表示しない記述-->
        <% if book_comment.user == current_user %>
          <td>
<!--(@book=book_idのこと) book_comment#destroyのパス（book_book_comment_path）-->
            <%= link_to 'Destroy', book_book_comment_path(@book, book_comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
          </td>
        <% end %>
        </tr>
        <% end %>
      </table>

        <div>
    <!--form_withに[インスタンス変数二つ指定]（コメントはbookに結びついたbook_comment）-->
          <%= form_with model: [@book, @book_comment] do |f| %>
            <%= f.text_area :comment, rows: '5', style: "width:100%" %></br>
            <%= f.submit "送信" %>
          <% end %>
        </div>
    </div>
  </div>
</div>