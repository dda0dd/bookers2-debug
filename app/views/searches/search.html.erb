<!--検索結果表示画面（検索結果一覧表示）-->
<h2>Results index</h2>
<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <tbody>
<!--searchesコントローラ内で検索結果を代入したインスタンス変数（@users,@books）に対しeach文で一つずつ取り出す-->
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>